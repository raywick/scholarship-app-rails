<div class="container-fluid">
<div class="row align-items-center">
  <div class="col-3 p-4"></div>
  
  <div class="col-6 p-2">
    <h2>Editar informacion personal</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :name, "Nombre" %><br />
        <%= f.text_field :name %>
      </div>

      <div class="form-group">
        <%= f.label :last_name, "Apellido" %><br />
        <%= f.text_field :last_name %>
      </div>

      <div class="form-group">
        <%= f.label :college_id, "ID universitario" %><br />
        <%= f.number_field :college_id %>
      </div>

      <div class="form-group">
        <%= f.label :birthday, "Fecha de nacimiento" %><br />
        <%= f.date_select :birthday %>
      </div>
      <div class="form-group">
        <%= f.label :address, "Direccion" %><br />
        <%= f.text_field :address %>
      </div>

      <div class="form-group">
        <%= f.label :zip_code, "Codigo Postal" %><br />
        <%= f.number_field :zip_code %>
      </div>

      <div class="field">
        <%= f.label :email, "Correo Electronico" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, "Contraseña" %> <i>(dejalo en blanco si no deseas cambiar tu contraseña)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> caracteres minimo</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirmar contraseña" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :current_password, "Contraseña actual" %> <i>(necesitamos tu contraseña actual para confirmar los cambios)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Actualizar" %>
      </div>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Estas seguro?" }, method: :delete %></p>

    <%= link_to "Volver", :back %>
  </div>
  <div class="col-3 p-4"></div>
</div>