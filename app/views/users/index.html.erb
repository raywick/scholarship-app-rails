<p id="notice"><%= notice %></p>

<h1>Todos los estudiantes</h1>

<table>
  <thead>
    <tr>
      <th class='p-1'>Nombre</th>
      <th class='p-1'>Apellidos</th>
      <th class='p-1'>Id Universitario</th>
      <th class='p-1'>Fecha de Nacimiento</th>
      <th class='p-1'>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class='p-1'><%= user.name %></td>
        <td class='p-1'><%= user.last_name %></td>
        <td class='p-1'><%= user.college_id %></td>
        <td class='p-1'><%= user.birthday %></td>
        <td class='p-1'><%= user.email %></td>
        <td class='p-1'><%= link_to 'Ver', user %></td>
        <td class='p-1'><%= link_to 'Destruir', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
