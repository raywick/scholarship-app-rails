<div class="container mt-5">
  <div class="col-12">
    <h2 class="mb-3 pt-5">Registrarse</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-row">
          <div class="form-group col-12 col-md-6">
            <%= f.label :name, "Nombres" %><br />
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group col-12 col-md-6">
            <%= f.label :last_name, "Apellidos" %><br />
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-12 col-md-6">
            <%= f.label :college_id, "Universidad ID" %><br />
            <%= f.number_field :college_id, placeholder: 1000000, class: "form-control" %>
          </div>

          <div class="form-group col-12 col-md-6">
            <%= f.label :birthday, "Fecha de Nacimiento" %><br />
            <%= f.date_select :birthday, class: "birthday" %>
          </div><!--Create Style for birthday class-->
        </div>

        <div class="form-group">
          <%= f.label :address, "Direccion" %><br />
          <%= f.text_field :address, class: "form-control" %>
        </div>

        <div class="form-row">
          <div class="form-group col-12 col-sm-4">
            <%= f.label :zip_code, "Codigo Postal" %><br />
            <%= f.number_field :zip_code, class: "form-control" %>
          </div>

          <div class="field col-12 col-sm-8">
            <%= f.label :email, "Correo Electronico" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div> 

        <div class="form-row">
          <div class="field col-12 col-md-6">
            <%= f.label :password, "Contraseña" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="field col-12 col-md-6">
            <%= f.label :password_confirmation, "Repita la contraseña" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>
        

        <div class="actions mt-1">
          <%= f.submit "Registrarse", class: "btn btn-success text-white mt-2" %>
        </div>
      <% end %>
      <p class="muted-text mt-2">¿Ya tienes cuenta?</p>
      <%= render "devise/shared/links" %>
  </div>
</div>
