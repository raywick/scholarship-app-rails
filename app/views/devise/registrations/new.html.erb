<div class="container-flex">
  <div class="col-12 align-content-center">
    <h2>Registrarse</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :name, "Nombres" %><br />
          <%= f.text_field :name %>
        </div>

        <div class="form-group">
          <%= f.label :last_name, "Apellidos" %><br />
          <%= f.text_field :last_name %>
        </div>

        <div class="form-group">
          <%= f.label :college_id, "Universidad ID" %><br />
          <%= f.number_field :college_id, placeholder: 1000000 %>
        </div>

        <div class="form-group">
          <%= f.label :birthday, "Fecha de Nacimiento" %><br />
          <%= f.date_select :birthday %>
        </div>
        <div class="form-group">
          <%= f.label :address, "Direccion" %><br />
          <%= f.text_field :address %>
        </div>

        <div class="form-group">
          <%= f.label :zip_code, "Codigo Postal" %><br />
          <%= f.number_field :zip_code %>
        </div>

        <div class="field">
          <%= f.label :email, "Correo Electronico" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "ContraseÃ±a" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Repita la contraseÃ±a" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        

        <div class="actions">
          <%= f.submit "Registrarse" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
  </div>
</div>
